<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
          version="3.1">


    <servlet>
        <servlet-name>form</servlet-name>
        <servlet-class>ru.kpfu.servlets.ServletForm</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>userList</servlet-name>
        <servlet-class>ru.kpfu.servlets.AllUsers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>authentication</servlet-name>
        <servlet-class>ru.kpfu.servlets.Authentication</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>profile</servlet-name>
        <servlet-class>ru.kpfu.servlets.Profile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authentication</servlet-name>
        <url-pattern>/aut</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>userList</servlet-name>
        <url-pattern>/out</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>form</servlet-name>
        <url-pattern>/form</url-pattern>
    </servlet-mapping>
</web-app>
